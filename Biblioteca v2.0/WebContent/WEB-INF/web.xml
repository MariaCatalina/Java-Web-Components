 <welcome-file-list>
 	<welcome-file>/index</welcome-file>
 </welcome-file-list>
 
 
 <!-- SECURITY ROLE -->
 <security-role>
 	<role-name>bibliotecar</role-name>
 </security-role>

 <security-role>
 	<role-name>client</role-name>
 </security-role>
 
<security-constraint>
	<web-resource-collection>
		<web-resource-name>Bine ai venit</web-resource-name>
		<url-pattern>/*</url-pattern>
		<http-method>GET</http-method>
		<http-method>POST</http-method>
	</web-resource-collection>
	
	<auth-constraint>
		<role-name>bibliotecar</role-name>
		<role-name>client</role-name>
	</auth-constraint>
	
	<user-data-constraint>
		<transport-guarantee>NONE</transport-guarantee>
	</user-data-constraint>
	
</security-constraint>


<security-constraint>

	<web-resource-collection>
		<web-resource-name>Bine ai venit!</web-resource-name>
		<url-pattern>/CarteAdaugata</url-pattern>
		<url-pattern>/AddBooks.jsp</url-pattern>
		<url-pattern>/ListaCarti</url-pattern>
		<url-pattern>/ListaCartiImprumutate</url-pattern>
	
		<http-method>GET</http-method>
		<http-method>POST</http-method>
	</web-resource-collection>

	<auth-constraint>
		<role-name>bibliotecar</role-name>
	</auth-constraint>

	<user-data-constraint>
		<transport-guarantee>NONE</transport-guarantee>
	</user-data-constraint>
	
</security-constraint>

<login-config>
      <auth-method>FORM</auth-method>
	<realm-name>Example Form-Based Authentication Area</realm-name>
      <form-login-config>
        <form-login-page>/login.jsp</form-login-page>
        <form-error-page>/error.jsp</form-error-page>
      </form-login-config>
</login-config>
	
</web-app>	